---
import Layout from "../../layouts/Layout.astro";
import Logo from "../../components/Logo.astro";
---

<Layout title="Thank you!">
  <div class="h-screen xl:h-auto xl:flex xl:gap-12 xl:items-center">
    <div class="w-1/3 xl:w-1/6">
      <Logo />
    </div>
    <main class="pt-8 xl:flex-1">
      <h1
        class="text-2xl xl:text-4xl font-warsaw uppercase leading-7 pb-4 xl:pb-8"
      >
      Thank you!
      </h1>
      <p class="font-theinhardt text-lg leading-6">
        Your data has been submitted. We will get back to you as soon as possible.
      </p>
    </main>
  </div>
</Layout>
